<rml>

<head>

<style>

body
{
	font-family: Droid Sans Fallback;
	color: white;
	font-size: 40;
}

input
{
	background-color: rgba(30,30,30,200);
	color: white;
	margin-right: 10px;
}

entry
{
	
	color: black;
	display: block;
	margin-left: 5px;
	margin-right: 5px;
	width: 490px;
}

div#container
{
	padding-top: 5px;
	display: block;
	overflow: scroll hidden;
	width: 100%;
	height: 500px;
	background-color: rgba(0,10,20,40);
}

div#chat_window
{
	font-size: 20;
	display: block;
	width: 500px;
	background-color: rgba(200,200,200,255);
}

button
{
	background-color: rgba(10,10,10,100);
}

</style>
</head>

<body>

<div id="chat_window">
	
	<handle move_target="#document"><div style="text-align: center;display: block;width: 100%;color: black;">Global Chat</div></handle>
	<div id="container">
	<entry>Hello !</entry>
	</div>

	<div>
		<input id="inputbox" type="text" />
		<button onclick="context.sendEvent('chat.send');">Send</button><br/>
	</div>
	
	<!--
	<handle size_target="#document"><div style="display: block;height: 30px;background-color: rgba(120,200,120,200);"></div></handle>-->

</div>

</body>
</rml>